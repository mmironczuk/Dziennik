@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<h1 style="color:white; padding:15px; text-align:center">@ViewData["Title"]</h1>
<div class="row" style="background-image: url('/images/loginbackground.jpg'); background-size: 100% auto; text-align: center">
    <div class="col-12 ">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="control-label" style="color:white"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="control-label" style="color:white"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="padding:10px">Zaloguj się</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Przypomnij hasło</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
