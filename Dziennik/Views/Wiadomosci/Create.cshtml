@model Dziennik.Models.Wiadomosc

@{
    ViewData["Title"] = "Nowa wiadomosc";
}

<h1 style="color:white">Nowa wiadomość </h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tytul" class="control-label"></label>
                <input asp-for="tytul" class="form-control" />
                <span asp-validation-for="tytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tresc" class="control-label"></label>
                <input asp-for="tresc" class="form-control" />
                <span asp-validation-for="tresc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Odbiorca</label>
                <select asp-for="OdbiorcaId" class ="form-control">
                    @foreach(var k in ViewBag.Konta)
                    { 
                        <option value="@k.Id">@k.imie @k.nazwisko</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
