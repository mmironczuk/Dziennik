@{
    Layout = "_Layout";
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (ViewBag.Ogloszenia.Count>0)
    {
        <h2 style="text-align:center; color:white;font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Tablica ogłoszeń:</h2>
        @foreach (var o in ViewBag.Ogloszenia)
        {
            <div class="card" style="width: 100%; margin-bottom: 1rem; background-color: gold">
                <div class="card-body">
                    <h5 class="card-title">@o.nazwa</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@o.data</h6>
                    <p class="card-text">@o.opis</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger" asp-controller="Ogloszenia" asp-action="Delete" asp-route-id="@o.OgloszenieId">Usuń ze strony</a>
                    }
                </div>
            </div>
        }
    }
    else
    {<h2 style="margin:20px;text-align:center; color:white;font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Aktualnie brak ogłoszeń</h2>}
</div>
