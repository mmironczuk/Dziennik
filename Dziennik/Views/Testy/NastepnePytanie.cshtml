@model Dziennik.Models.PytanieViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-center text-center">
    <form asp-action="NastepnePytanie" method="post">
        <h3><b>Pytanie nr @Model.numer_pytania. Liczba zdobytych punktów: @Model.points</b></h3>
        <div class="form-group">
            <h3><b>@Model.tresc</b></h3>
        </div>
        <div class="form-group">
            <input type="radio" asp-for="@Model.odp" value="odpA" />@Model.odpA
        </div>
        <div class="form-group">
            <input type="radio" asp-for="@Model.odp" value="odpB" />@Model.odpB
        </div>
        <div class="form-group">
            <input type="radio" asp-for="@Model.odp" value="odpC" />@Model.odpC
        </div>
        <div class="form-group">
            <input type="radio" asp-for="@Model.odp" value="odpD" />@Model.odpD
        </div>
        <input type="hidden" asp-for="@Model.points" value="@Model.points" />
        <input type="hidden" asp-for="@Model.numer_pytania" value="@Model.numer_pytania" />
        <input type="hidden" asp-for="@Model.TestId" value="@Model.TestId" />
        <input type="hidden" asp-for="@Model.PytanieId" value="@Model.PytanieId" />
        <div>
            <input type="submit" value="Dalej" class="btn btn-primary" />
        </div>
    </form>
</div>