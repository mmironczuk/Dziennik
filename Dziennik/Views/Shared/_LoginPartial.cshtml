@using Microsoft.AspNetCore.Identity
@inject SignInManager<Konto> SignInManager
@inject UserManager<Konto> UserManager


@if (SignInManager.IsSignedIn(User) && User.IsInRole("Uczen"))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="fa fa-home"></i>
                Home
                <span class="sr-only">(current)</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Oceny" asp-action="OcenyUcznia">
                <i class="fa fa-check-square"></i>
                Oceny
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Testy" asp-action="TestUcznia">
                <i class="fa fa-list-ul"></i>
                Testy
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Wyloguj się</button>
            </form>
        </li>
    </ul>
}
