@model IEnumerable<Dziennik.Models.Ogloszenie>

@{
    ViewData["Title"] = "Akceptacja ogloszen";
}

<div class="text-center">
    @if (ViewBag.Ogloszenia.Count>0)
    {
        <h2 style="text-align:center; color:white;font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Ogłoszenia do akceptacji:</h2>
        @foreach (var o in ViewBag.Ogloszenia)
        {
            <div class="card" style="width: 100%; margin-bottom: 1rem; background-color: gold">
                <div class="card-body">
                    <h5 class="card-title">@o.nazwa</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@o.data , @o.Nauczania.Konto.imie @o.Nauczania.Konto.nazwisko</h6>
                    <p class="card-text">@o.opis</p>
                    <a class="btn btn-success" style="margin:5px" asp-controller="Ogloszenia" asp-action="Akceptacja" asp-route-id="@o.OgloszenieId">Zaakceptuj</a>
                    <a class="btn btn-danger" style="margin:5px" asp-controller="Ogloszenia" asp-action="Delete" asp-route-id="@o.OgloszenieId">Usuń ze strony</a>
                </div>
            </div>
        }
    }
    else
    {<h2 style="margin: 100px;text-align:center; font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">Aktualnie brak ogłoszeń do akceptacji</h2>}
</div>