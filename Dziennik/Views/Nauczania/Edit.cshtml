@model Dziennik.Models.Nauczanie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Nauczanie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NauczanieId" />
            <div class="form-group">
                <label asp-for="KlasaId" class="control-label"></label>
                <select asp-for="KlasaId" class="form-control" asp-items="ViewBag.KlasaId"></select>
                <span asp-validation-for="KlasaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrzedmiotId" class="control-label"></label>
                <select asp-for="PrzedmiotId" class="form-control" asp-items="ViewBag.PrzedmiotId"></select>
                <span asp-validation-for="PrzedmiotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KontoId" class="control-label"></label>
                <select asp-for="KontoId" class="form-control">
                    @foreach (var n in ViewBag.Nauczyciele)
                    {
                        <option value="@n.Id">@n.imie @n.nazwisko</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
