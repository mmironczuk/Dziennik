@model IEnumerable<Dziennik.Models.Nauczanie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Klasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Przedmiot)
            </th>
            <th>
                Nauczyciel
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Klasa.nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Przedmiot.nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Konto.imie)
                @Html.DisplayFor(modelItem => item.Konto.nazwisko)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NauczanieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NauczanieId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NauczanieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
