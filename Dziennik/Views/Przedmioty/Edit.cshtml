@model Dziennik.Models.Przedmiot

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Przedmiot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrzedmiotId" />
            <div class="form-group">
                <label asp-for="nazwa" class="control-label"></label>
                <input asp-for="nazwa" class="form-control" />
                <span asp-validation-for="nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dziedzina" class="control-label"></label>
                <select asp-for="dziedzina" class="form-control">
                    <option value="Przedmioty ścisłe">Przedmioty ścisłe</option>
                    <option value="Języki">Języki</option>
                    <option value="Przedmioty humanistyczne">Przedmioty humanistyczne</option>
                    <option value="Przedmioty artystyczne">Przedmioty artystyczne</option>
                    <option value="Sport">Sport</option>
                </select>
                <span asp-validation-for="dziedzina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tresci" class="control-label"></label>
                <input asp-for="tresci" class="form-control" />
                <span asp-validation-for="tresci" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
