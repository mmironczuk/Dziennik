@model Dziennik.Models.Klasa


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Klasa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nazwa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wychowawca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wychowawca.imie)
            @Html.DisplayFor(model => model.Wychowawca.nazwisko)
        </dd>
        <dt class="col-sm-2">
            Uczniowie w klasie
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var u in Model.Uczniowie)
                {
                    <li>@u.imie @u.nazwisko</li>
                    <a asp-action="DeleteClass" asp-route-id="@u.Id" asp-route-ClassId="@u.KlasaId">Usuń z klasy</a>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            Uczniowie bez przydziału
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var u in ViewBag.UczniowieBezKlasy)
                {
                    <li>@u.imie @u.nazwisko</li>
                    <a asp-action="AddToClass" asp-route-id="@u.Id" asp-route-ClassId="@Model.KlasaId">Dodaj do klasy</a>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.KlasaId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>