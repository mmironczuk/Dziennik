@model Dziennik.Models.Klasa

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Klasa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KlasaId" />
            <div class="form-group">
                <label asp-for="nazwa" class="control-label"></label>
                <input asp-for="nazwa" class="form-control" />
                <span asp-validation-for="nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KontoId" class="control-label"></label>
                <select asp-for="KontoId" class="form-control">
                    @foreach (var n in ViewBag.Konta)
                    {
                        <option value="@n.Id">@n.imie @n.nazwisko</option>
                    }
                </select>
                <span asp-validation-for="KontoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
